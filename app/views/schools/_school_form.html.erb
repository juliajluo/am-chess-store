<div class = "container">
  <div class = "section">
    <h3 class = "title">New Item Price</h3>
      <div class = "box">

<%= simple_form_for @schools, html: { class: 'form-horizontal' } do |f| %>

  <% if @schools.errors.any? %>
    <article class="message is-warning">
      <div class="message-header">
        <p><%= pluralize(@schools.errors.count, "error") %> found</p>
        <button class="delete"></button>
      </div>
      <div class="message-body">
        <ul>
          <% @schools.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </article>
  <% end %>



    <div class="field is-horizontal">
      <label class="label">Name</label>
      <div class="control">
        <%= f.text_field :name, :hint => "cn't be blank", :class => "input" %>
      </div>
    </div>

    <div class="field is-horizontal">
      <label class="label">Street 1</label>
      <p class="control">
        <%= f.text_field :street_1, :class => "input" %>
      </p>
      <label class="label">Street 2</label>
      <p class="control">
        <%= f.text_field :street_2, :class => "input" %>
      </p>
    </div>

    <div class="field is-horizontal">
      <label class="label">City</label>
      <p class="control">
        <%= f.text_field :city, :class => "input" %>
      </p>
      <label class="label">State</label>
      <p class="control">
        <%= f.text_field :state, :class => "input" %>
      </p>
      <label class="label">Zip</label>
      <p class="control">
        <%= f.text_field :zip, :class => "input" %>
      </p>
    </div>

    <div class="field is-horizontal">
      <label class="label">Min Grade</label>
      <p class="control">
        <%= f.text_field :min_grade, :class => "input" %>
      </p>
      <label class="label">Max Grade</label>
      <p class="control">
        <%= f.text_field :max_grade, :class => "input" %>
      </p>
    </div>


<div class="form-actions">
  <%= f.submit class: 'button is-primary' %>
  <%= link_to 'Cancel', edit_user_path(current_user), :class => 'button is-link' %>
</div>

<% end %>
</div>
</div>
</div>
