<section class="hero is-primary is-medium">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Schools
      </h1>

      <% if logged_in? && (current_user.role == "admin" || current_user.role == "manager")%>
        <%= link_to "add new", new_school_path, :class => "button is-primary"%>
      <%end%>
    </div>
  </div>
</section>


<div class = "container">
  <div class = "section">
    <table>
      <th>
        Name
      </th>
      <th>
        Zip
      </th>
      <th>
        Active
      </th>
      <% @schools.each do |s|%>
      <tr>
        <td>
          <%=s.name%>
        </td>
        <td>
          <%=s.zip%>
        </td>
        <td>
          <% if s.active%>
            Active
          <% else%>
           inactive
           <%end%>
        </td>
        </tr>
      <%end%>
    </table>
  </div>
</div>
