<section class ="hero is-light">
  <div class ="hero-body">
    <div class = "container">
      Items / <%= @item.name %>
    </div>
  </div>
</section>


<div class ="section">
  <div class="tile is-ancestor">
    <div class="tile is-4 is-parent">
      <figure class ='image'>
        <%= image_tag 'comingsoon.png', :class =>'image' %>
      </figure>
    </div>

    <div class = "tile is-8 is-parent">
      <div class ="box">

        <%= render :partial => "item_details"%>

        <br>
              <%= link_to 'Edit', edit_item_path(@item), :class => 'button is-light' %>
              <%= link_to 'View All', items_path, :class => 'button is-light'  %>
              <%= link_to 'Destroy', @item, confirm: 'Are you sure?', method: :delete, :class => 'button is-danger'  %>
        <br />
      </div>
    </div>
  </div>
</div>

<section class = "hero is-medium is-light">
  <div class = "hero-body">
  <h2 class ="subtitle">Similar Items</h2>
  <div class = "columns">
    <% @similar_items.each do |si| %>
      <div class ="column">
      <div class="card">
        <header class="card-header">
          <%= link_to si.name, item_path(si), :class =>"card-header-title"%>
        </header>
      </div>
      <div class = "card-image">
        <figure class ='image'>
          <%= image_tag 'comingsoon.png', :class =>'image' %>
        </figure>
      </div>

    </div>

    <%end%>
  </div>
</div>
</section>
