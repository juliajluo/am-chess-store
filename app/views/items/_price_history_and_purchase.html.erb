<div class = "section">
  <div class = "columns">
    <div class = "column is-7">
      <%= render partial: 'items/list_of_prices' unless @price_history.empty?%>
    </div>

    <div class = "column is-5">
      <br /><br /><br />
      <div id = "price_table">
        <%= link_to(new_item_price_path(item_id:@item.id), :id => 'add_price_link', :class => 'button is-primary', remote: true) do  %>
          Add New Item Price
        <% end %>
      </div>
      <br />

      <div id = "new_purchase_button">
        <%= link_to(new_purchase_path(item_id:@item.id), :class => 'button is-primary', remote: true) do  %>
          New Purchase
        <% end %>
      </div>

    </div>
  </div>
</div>
