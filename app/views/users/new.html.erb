
<div class = "section">

  <%= simple_form_for @user, :html => { :multipart => true, :class => 'form-horizontal'} do |f| %>

    <% if @user.errors.any? %>
      <article class="message is-warning">
        <div class="message-header">
          <p><%= pluralize(@user.errors.count, "error") %> found</p>
          <button class="delete"></button>
        </div>
        <div class="message-body">
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </article>
    <% end %>


    <div class="field is-horizontal">
      <label class="label">First Name</label>
      <p class="control">
        <%= f.text_field :first_name, :hint => "can't be blank", :class => "input" %>
      </p>
      <label class="label">Last Name</label>
      <p class="control">
        <%= f.text_field :last_name, :hint => "can't be blank", :class => "input" %>
      </p>
    </div>

    <div class="field is-horizontal">
        <label class="label">Username</label>
        <p class="control">
          <%= f.text_field :username, :hint => "can't be blank", :class => "input" %>
        </p>
        <label class="label">Role</label>
        <p class="control">
          <span class="select">
            <%= f.select :role, User::ROLES %>
          </span>
        </p>
      </div>


      <div class="field is-horizontal">
      <label class="label">Email</label>
      <p class="control">
        <%= f.text_field :email,:hint => "can't be blank", :class => "input" %>
      </p>
      <label class="label">Phone</label>
      <p class="control">
        <%= f.text_field :phone, :class => "input" %>
      </p>
    </div>


    <div class="field is-horizontal">

      <label class="label">Password</label>
      <p class="control">
        <%= f.text_field :password, :class => "input" %>
      </p>
    </div>


    <div class="field is-horizontal">
      <label class="label">Confirm Password</label>
      <p class="control">
        <%= f.text_field :password_confirmation, :class => "input" %>
      </p>
    </div>




    <div class="actions">
      <%= f.submit class: 'button is-primary'%>
      <%= link_to 'Cancel', home_path, :class => 'button is-link' %>
    </div>


  <% end %>


</div>
