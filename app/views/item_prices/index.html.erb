<section class="hero is-primary is-medium">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Current Item Prices
      </h1>
      <% if logged_in? && (current_user.role == "admin" || current_user.role == "manager")%>
        <%= link_to "add new", new_item_price_path, :class => "button is-primary"%>
      <%end%>
    </div>
  </div>
</section>

<div class = "container">
<div class = "section">

  <%unless @active_items.empty?%>
    <%= render partial: 'partials/price_table', locals: {item_prices: @active_items } unless @active_items.empty? %>
  <%else%>
    <%= flash[:notice] = "There are no items in the system at this time"%>
    <%end%>

    <span class = "smtext">
    <%= will_paginate @active_items, previous_label: "Previous", next_label: "Next"%>
    </span>
</div>
</div>
